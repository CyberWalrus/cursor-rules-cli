{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/CyberWalrus/cursor-rules-cli/main/schemas/cursor-rules-config-1.0.0.schema.json",
  "title": "Cursor Rules Configuration",
  "description": "Configuration file for cursor-rules CLI tool",
  "type": "object",
  "required": [
    "configVersion",
    "installedAt",
    "updatedAt",
    "source",
    "version",
    "settings",
    "ruleSets"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference URL"
    },
    "configVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration format version (semver)",
      "examples": [
        "1.0.0"
      ]
    },
    "installedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Installation timestamp (ISO 8601)",
      "examples": [
        "2025-11-07T10:00:00.000Z"
      ]
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (ISO 8601)",
      "examples": [
        "2025-11-07T12:30:00.000Z"
      ]
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "description": "Source package name",
      "examples": [
        "cursor-rules"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Installed rules version (semver)",
      "examples": [
        "1.2.3"
      ]
    },
    "cliVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "CLI tool version (semver)",
      "examples": [
        "0.1.0"
      ]
    },
    "promptsVersion": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{1,2}\\.\\d{1,2}\\.\\d+$",
      "description": "Prompts version (CalVer format YYYY.M.D.N)",
      "examples": [
        "2025.1.15.1"
      ]
    },
    "systemRulesVersion": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{1,2}\\.\\d{1,2}\\.\\d+$",
      "description": "System rules version (CalVer format YYYY.M.D.N)",
      "examples": [
        "2025.1.15.1"
      ]
    },
    "settings": {
      "type": "object",
      "required": [
        "language"
      ],
      "properties": {
        "language": {
          "type": "string",
          "enum": [
            "ru",
            "en"
          ],
          "description": "CLI output language"
        }
      },
      "additionalProperties": false
    },
    "ruleSets": {
      "type": "array",
      "minItems": 1,
      "description": "Rule sets to install/update",
      "items": {
        "type": "object",
        "required": [
          "id",
          "update"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "description": "Rule set identifier",
            "examples": [
              "base",
              "typescript",
              "go"
            ]
          },
          "update": {
            "type": "boolean",
            "description": "Whether to update this rule set"
          },
          "fixedVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Fixed version for this rule set (optional)",
            "examples": [
              "1.0.0"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "ignoreList": {
      "type": "array",
      "description": "File paths (exact or glob patterns) relative to .cursor/ to ignore during updates. Supports negation patterns with '!' prefix to exclude files from ignore rules (e.g., ignore 'rules/**' but update 'rules/prompt-workflow.mdc' with 'rules/**' and '!rules/prompt-workflow.mdc')",
      "items": {
        "type": "string",
        "minLength": 1,
        "examples": [
          "rules/custom-project-rule.mdc",
          "rules/**/*.custom.mdc",
          "**/*.backup.*",
          "rules/**",
          "!rules/prompt-workflow.mdc"
        ]
      },
      "default": []
    },
    "fileOverrides": {
      "type": "array",
      "description": "YAML frontmatter overrides for specific files",
      "items": {
        "type": "object",
        "required": [
          "file",
          "yamlOverrides"
        ],
        "properties": {
          "file": {
            "type": "string",
            "minLength": 1,
            "description": "File path relative to .cursor/",
            "examples": [
              "rules/code-standards.mdc"
            ]
          },
          "yamlOverrides": {
            "type": "object",
            "description": "YAML frontmatter parameters to merge",
            "additionalProperties": true,
            "examples": [
              {
                "alwaysApply": true,
                "priority": 10
              }
            ]
          }
        },
        "additionalProperties": false
      },
      "default": []
    }
  },
  "additionalProperties": false
}