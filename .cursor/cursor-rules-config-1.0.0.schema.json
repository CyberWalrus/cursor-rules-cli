{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://json.schemastore.org/cursor-rules-config-1.0.0.json",
  "title": "Cursor Rules Configuration",
  "description": "Configuration file for cursor-rules CLI tool",
  "type": "object",
  "required": [
    "configVersion",
    "installedAt",
    "updatedAt",
    "source",
    "version",
    "settings",
    "ruleSets"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference URL"
    },
    "configVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration format version (semver)",
      "examples": ["1.0.0"]
    },
    "installedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Installation timestamp (ISO 8601)",
      "examples": ["2025-11-07T10:00:00.000Z"]
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (ISO 8601)",
      "examples": ["2025-11-07T12:30:00.000Z"]
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "description": "Source package name",
      "examples": ["cursor-rules"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Installed rules version (semver)",
      "examples": ["1.2.3"]
    },
    "settings": {
      "type": "object",
      "required": ["language"],
      "properties": {
        "language": {
          "type": "string",
          "enum": ["ru", "en"],
          "description": "CLI output language"
        }
      },
      "additionalProperties": false
    },
    "ruleSets": {
      "type": "array",
      "minItems": 1,
      "description": "Rule sets to install/update",
      "items": {
        "type": "object",
        "required": ["id", "update"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "description": "Rule set identifier",
            "examples": ["base", "typescript", "go"]
          },
          "update": {
            "type": "boolean",
            "description": "Whether to update this rule set"
          },
          "fixedVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Fixed version for this rule set (optional)",
            "examples": ["1.0.0"]
          }
        },
        "additionalProperties": false
      }
    },
    "ignoreList": {
      "type": "array",
      "description": "File paths (exact or glob patterns) relative to .cursor/ to ignore during updates",
      "items": {
        "type": "string",
        "minLength": 1,
        "examples": [
          "rules/custom-project-rule.mdc",
          "rules/**/*.custom.mdc",
          "**/*.backup.*"
        ]
      },
      "default": []
    },
    "fileOverrides": {
      "type": "array",
      "description": "YAML frontmatter overrides for specific files",
      "items": {
        "type": "object",
        "required": ["file", "yamlOverrides"],
        "properties": {
          "file": {
            "type": "string",
            "minLength": 1,
            "description": "File path relative to .cursor/",
            "examples": ["rules/code-standards.mdc"]
          },
          "yamlOverrides": {
            "type": "object",
            "description": "YAML frontmatter parameters to merge",
            "additionalProperties": true,
            "examples": [
              {
                "alwaysApply": true,
                "priority": 10
              }
            ]
          }
        },
        "additionalProperties": false
      },
      "default": []
    }
  },
  "additionalProperties": false
}


